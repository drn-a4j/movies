<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeXPercent" parent="">
        <item name="cornerSize">49%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="TvShowsTextView" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_shows_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <!-- Movie Details-->
    <style name="MovieDetailsCastItem" parent="">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MovieDetailsTextViewBase" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MovieDetailsDescription" parent="MovieDetailsTextViewBase">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="MovieDetailsButton" parent="">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieDetailsTitle" parent="">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>
